<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd" version="2.4">
  <servlet>
    <servlet-name>Init</servlet-name>
    <servlet-class>com.weiguang.framework.init.InitServlet</servlet-class>
    <load-on-startup>0</load-on-startup>
  </servlet>
  <servlet>
    <servlet-name>breezeclient</servlet-name>
    <servlet-class>com.weiguang.framework.netserver.BreezeClientPoint</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>webrequestpoint</servlet-name>
    <servlet-class>com.weiguang.framework.netserver.RequestBreezePoint</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>upload</servlet-name>
    <servlet-class>com.weiguang.framework.netserver.UploadPoint</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>WeiXinServlet</servlet-name>
    <servlet-class>com.weiguang.service.weixin.WeiXinServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Init</servlet-name>
    <url-pattern>/Init.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>breezeclient</servlet-name>
    <url-pattern>*.brz</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>webrequestpoint</servlet-name>
    <url-pattern>*.rbp</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>*.up</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>*.mup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>upload</servlet-name>
    <url-pattern>*.php</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WeiXinServlet</servlet-name>
    <url-pattern>*.wx</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
  <welcome-file-list>
    <welcome-file>
            index.jsp
        </welcome-file>
  </welcome-file-list>
</web-app>